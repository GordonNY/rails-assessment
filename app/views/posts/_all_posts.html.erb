<% posts.each_with_index do |post, index| %>
  <div class="post <%= "post-background" if (index + 1) % 2 == 0 %>">
    <h3><%= link_to post.description, post %></h3>
    <p><%= post.user.username %> | <%= post.created_at %></p>
    <%#= link_to 'Show', post, class: "btn btn-default btn-xs" %>
    <% if current_user && current_user.id == post.user_id  %>
    <%= link_to 'Edit', edit_post_path(post), class: "btn btn-primary btn-xs" %>
    <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
    <% end %>
  </div>
<% end %>